{
  "name": "sketch-scale-all-in-place",
  "description": "Sketch plugin to scale all selected layers, in place, from center.",
  "version": "3.0.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "sketch-scale-all-in-place",
    "manifest": "src/manifest.json",
    "main": "sketch-scale-all-in-place.sketchplugin"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.2"
  },
  "author": "Mike Gowen <mike@delighted.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delighted/sketch-scale-all-in-place"
  },
  "license": "MIT"
}
